<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityRegistro"
    android:background="@color/colorBlancoNuestro">

    <TextView
        android:id="@+id/tvRegister_AR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="@string/txt_titRegister"
        android:textSize="@dimen/letrasTitulosGrandes"
        android:textColor="@color/colorRojo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/robotomedium"/>

    <LinearLayout
        android:id="@+id/llLogin_AM"
        android:layout_width="300dp"
        android:layout_height="195dp"
        android:layout_marginTop="110dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/esquinas_redondeadas"
        app:layout_constraintTop_toBottomOf="@+id/tvRegister_AR">


        <EditText
            android:id="@+id/editText"
            android:layout_width="200dp"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/letrasNormales"
            android:hint="@string/hintUser"
            android:inputType="textPersonName"
            android:textColor="@color/colorAzulOscuro"
            android:textColorHint="@color/colorAzulOscuro"
            android:fontFamily="@font/robotolight"
            />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="200dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:textSize="@dimen/letrasNormales"
            android:hint="@string/hintPassword"
            android:inputType="textPassword"
            android:textColor="@color/colorAzulOscuro"
            android:textColorHint="@color/colorAzulOscuro"
            android:fontFamily="@font/robotolight"
            />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="200dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/letrasNormales"
            android:hint="@string/hintCorreo"
            android:inputType="textPersonName"
            android:textColor="@color/colorAzulOscuro"
            android:textColorHint="@color/colorAzulOscuro"
            android:fontFamily="@font/robotolight"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivBtn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/next"
        app:layout_constraintBottom_toBottomOf="@+id/llLogin_AM"
        app:layout_constraintEnd_toEndOf="@+id/llLogin_AM"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/llLogin_AM"
        app:layout_constraintTop_toTopOf="@+id/llLogin_AM"
        android:onClick="irA_ActivityMain"/>

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/esquinas_izquierdas_redondeadas"
        android:onClick="irA_ActivityMain"
        android:text="@string/txt_btnAtras"
        android:textColor="@color/colorRojo"
        android:textSize="@dimen/letrasBotones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llLogin_AM"
        android:fontFamily="@font/robotomedium"/>

</androidx.constraintlayout.widget.ConstraintLayout>