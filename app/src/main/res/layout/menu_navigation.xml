<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/colorBlancoNuestro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/ivMenuNews"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/colorBlancoNuestro"
            app:srcCompat="@drawable/ic_newsfeed" />

        <ImageButton
            android:id="@+id/ivMenuChat"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:onClick="accederChat"
            android:background="@color/colorBlancoNuestro"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <ImageButton
            android:id="@+id/ivMenuLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:onClick="accesoFirst"
            android:background="@color/colorBlancoNuestro"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/logo1" />

        <ImageButton
            android:id="@+id/ivMenuMapa"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:onClick="accesoMapa"
            android:background="@color/colorBlancoNuestro"
            app:srcCompat="@drawable/ic_pin" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>