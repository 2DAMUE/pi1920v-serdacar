<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ScrollingActivity"
    tools:showIn="@layout/activity_scrolling"
    android:background="@color/colorBlancoNuestro">

    //Aqu√≠ van los gases


    <LinearLayout
        android:id="@+id/LLGas1Primero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/LLgas1Completo"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/esquinas_izquierdas_redondeadas_todas_cardview">

            <ImageView
                android:id="@+id/ivGas1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_molecule_foreground_rojo"/>

            <LinearLayout
                android:id="@+id/LLgas1Info"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvFormaTituloGas1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ejemplo: NO2"
                    android:textColor="@color/colorBlancoNuestro"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/tvTituloGas1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Titulo Gas1"
                    android:textColor="@color/colorBlancoNuestro"
                    android:textAlignment="center"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/esquinas_izquierdas_redondeadas_todas_cardview_claro">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/large_text"
                        android:layout_margin="10dp"
                        android:textColor="@color/colorBlancoNuestro"/>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.core.widget.NestedScrollView>