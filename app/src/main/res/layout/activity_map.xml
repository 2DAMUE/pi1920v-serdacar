<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/fragmentMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        map:uiZoomControls="true"
        map:uiCompass="true"
        tools:context=".MapActivity"
        tools:layout="@layout/activity_map" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/fragmentMap"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/btnTipoMapaSatelite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClickTipoSatelite"
                android:text="Satélite"/>

            <Button
                android:id="@+id/btnTipoMapaHybrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClickTipoHybrid"
                android:text="Híbrido" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/fragmentMap"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/btnTipoMapaNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickTipoNormal"
                android:layout_weight="1"
                android:text="Normal" />

            <Button
                android:id="@+id/btnTipoMapaTerrain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClickTipoTerrain"
                android:text="Terreno" />

        </LinearLayout>

    </LinearLayout>


    <!-- EXOANDABLE CARD VIEW -->
    <com.alespero.expandablecardview.ExpandableCardView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="60dp"

        android:background="@color/colorBlancoNuestro"
        android:id="@+id/swipecard"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:title="Expandable Card View"
        app:icon="@drawable/abc_vector_test"
        app:inner_view="@layout/cardview_information"
        app:expandOnClick="true"
        app:animationDuration="300"
        app:startExpanded="false" />


    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintStart_toStartOf="parent">

        <include layout="@layout/menu_navigation" />
    </FrameLayout>





</androidx.constraintlayout.widget.ConstraintLayout>